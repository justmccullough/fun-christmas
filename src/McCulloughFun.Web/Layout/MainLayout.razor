@inherits LayoutComponentBase
<MudThemeProvider Theme="_currentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Class="pa-4">
        <MudLink Href="/">
            <MudImage Src="/img/Logo.png" Alt="McCullough">
            </MudImage>
        </MudLink>
       <MudSpacer />
        <MudButton Variant="Variant.Text" Link="/christmas">Christmas</MudButton>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="ma-8">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code {
    private McCulloughFunTheme _currentTheme = new McCulloughFunTheme();
}